{
  "name": "react-fsd",
  "displayName": "react-fsd",
  "description": "Automating FSD segment creation in React projects",
  "version": "0.1.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "react-fsd.create_react-fsd_folder",
        "title": "Create FSD slice"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder",
          "command": "react-fsd.create_react-fsd_folder",
          "group": "YourGroup@1"
        }
      ]
    },
    "configuration": {
      "title": "react-fsd",
      "properties": {
        "react-fsd.exceptionKeys": {
          "type": "array",
          "enum": [
            "ui",
            "lib",
            "api",
            "model"
          ],
          "default": [
            "ui"
          ],
          "description": "Segment keys that will not be present when selected and will be created by default"
        },
        "react-fsd.languageSelector": {
          "type": "string",
          "enum": [
            "javascript",
            "typescript"
          ],
          "default": "typescript",
          "description": "Selecting the programming language to be used when creating files"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9"
  },
  "publisher": "Websmail",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/WebSmaIL/react-fsd"
  }
}
